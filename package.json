{
  "name": "licope-lab",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "emu": "firebase emulators:start --only firestore,auth",
    "test:rules": "firebase emulators:exec --only firestore \"vitest run src/rules.test.ts\"",
    "test:rules:live": "FIRESTORE_EMULATOR_HOST=127.0.0.1:8080 vitest run src/rules.test.ts",
    "test:rules:watch": "FIRESTORE_EMULATOR_HOST=127.0.0.1:8080 vitest watch src/rules.test.ts",
    "typecheck": "tsc --noEmit --strict",
    "build": "vite build",
    "deploy:dev": "vite build && firebase deploy --only hosting --project default",
    "deploy:prod": "vite build && firebase deploy --only hosting --project prod",
    "check": "npm run typecheck && npm run test:rules"
  },
  "dependencies": {
    "firebase": "^12.2.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.8.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@firebase/rules-unit-testing": "^5.0.0",
    "@tailwindcss/cli": "^4.1.13",
    "@tailwindcss/postcss": "^4.1.13",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.34.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "firebase-tools": "^14.15.1",
    "globals": "^16.3.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2",
    "vitest": "^3.2.4"
  }
}
